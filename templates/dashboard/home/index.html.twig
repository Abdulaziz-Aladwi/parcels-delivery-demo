{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<main class="app-content"></div>
	<div class="header-body">
		<div class="row">
			<div class="col-xl-3 col-lg-6">
				<div class="card card-stats mb-4 mb-xl-0">
					<div class="card-body">
						<div class="row">
							<div class="col">
								<h5 class="card-title text-uppercase text-muted mb-0">Pending Parcels</h5>
								<span class="h2 font-weight-bold mb-0">{{data['pending']}}</span>
							</div>
							<div class="col-auto">
								<div class="icon icon-shape bg-danger text-white rounded-circle shadow">
									<i class="fas fa-chart-bar"></i>
								</div>
							</div>
						</div>
						<p class="mt-3 mb-0 text-muted text-sm">
							<span class="text-success mr-2">
						</p>
					</div>
				</div>
			</div>

			<div class="col-xl-3 col-lg-6">
				<div class="card card-stats mb-4 mb-xl-0">
					<div class="card-body">
						<div class="row">
							<div class="col">
								<h5 class="card-title text-uppercase text-muted mb-0">Picked Up Parcels</h5>
								<span class="h2 font-weight-bold mb-0">{{data['picked_up']}}</span>
							</div>
							<div class="col-auto">
								<div class="icon icon-shape bg-warning text-white rounded-circle shadow">
									<i class="fas fa-chart-pie"></i>
								</div>
							</div>
						</div>
						<p class="mt-3 mb-0 text-muted text-sm">
							<span class="text-danger mr-2">
								<i class="fas fa-arrow-down"></i>
						</p>
					</div>
				</div>
			</div>

		</div>
	</div>
</div></main>{% endblock %}
